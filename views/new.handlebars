<h1 class="mb-1 restaurant-show-title">新增餐廳</h1>
<div class="container">
  <form action="/restaurants" method="POST">
    <div class="mb-3">
      <label for="name" class="form-label">店名</label>
      <input 
        type="text" 
        class="form-control" 
        id="name" 
        placeholder="" 
        name="name" 
        required 
      />
    </div>
    <div class="mb-3">
      <label for="name_en" class="form-label">英文店名</label>
      <input
         type="text" 
         class="form-control" 
         id="name_en" 
         placeholder="" 
         name="name_en" 
         required 
      />
    </div>
    <div class="mb-3">
      <label for="category" class="form-label">類別</label>
      <input 
        type="text" 
        class="form-control" 
        id="category" 
        placeholder="" 
        name="category" 
        required
      />
    </div>
    <div class="mb-3">
      <label for="image" class="form-label">圖片連結</label>
      <input 
        type="url" 
        class="form-control" 
        id="image" 
        placeholder="" 
        name="image" 
        required 
      />
    </div>
    <div class="mb-3">
      <label for="location" class="form-label">地址</label>
      <input 
        type="text" 
        class="form-control" 
        id="location" 
        placeholder="" 
        name="location" 
        required 
      />
    </div>
    <div class="mb-3">
      <label for="phone" class="form-label">電話</label>
      <input 
        type="tel" 
        class="form-control" 
        id="phone" 
        placeholder="" 
        name="phone" 
        required 
      />
    </div>
    <div class="mb-3">
      <label for="google_map" class="form-label">Google地圖連結</label>
      <input
        type="url" 
        class="form-control" 
        id="google_map" 
        placeholder="" 
        name="google_map" 
        required
      />
    </div>
    <div class="mb-3">
      <label for="rating" class="form-label">評分</label>
      <input 
        type="number" 
        class="form-control"
        id="rating" 
        min="0"
        max="5"
        step="0.1"
        name="rating" 
        required 
      />
    </div>
    <div class="mb-3">
      <label for="description" class="form-label">敘述</label>
      <textarea 
        class="form-control" 
        id="description" 
        rows="3" 
        name="description" 
        required
      >
      </textarea>
    </div>
    <div class="text-center">
      <button type="submit" class="btn btn-primary">
        新增餐廳
      </button>
    </div>
  </form>
</div>